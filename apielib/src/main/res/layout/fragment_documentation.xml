<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.DocumentationFragment">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Station A - Notes"
        app:chipBackgroundColor="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/chipPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Station P - Plan"
        app:chipBackgroundColor="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/chipDrugChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipNotes" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDrugChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Station I - Drug Chart"
        app:chipBackgroundColor="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipPlan" />

</androidx.constraintlayout.widget.ConstraintLayout>